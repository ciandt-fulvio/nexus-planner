# ============================================================================
# Nexus API Configuration - ALL VARIABLES ARE REQUIRED
# ============================================================================
# Copy this file to .env and set all values for your environment.
# The application will NOT start if any variable is missing.
# 
# No defaults are provided in config.py - explicit configuration is required.

# ============================================================================
# Server Configuration (REQUIRED)
# ============================================================================
# HOST: Server binding address
# PORT: Server listening port (integer)
# DEBUG: Enable debug mode (true/false) - do NOT use true in production
HOST=0.0.0.0
PORT=8000
DEBUG=false

# ============================================================================
# CORS Configuration (REQUIRED)
# ============================================================================
# CORS_ORIGINS: Comma-separated list of allowed origins
# Example for local: http://localhost:8080,http://localhost:3000
# Example for production: https://yourdomain.com
CORS_ORIGINS=http://localhost:8080

# ============================================================================
# API Configuration (REQUIRED)
# ============================================================================
# API_V1_PREFIX: Base path for API v1 endpoints
API_V1_PREFIX=/api/v1

# ============================================================================
# Database Configuration (REQUIRED)
# ============================================================================
# DATABASE_URL: Connection string for the database
#
# SQLite example (development):
#   sqlite+aiosqlite:///nexus.db
#   sqlite+aiosqlite:////absolute/path/nexus.db
#
# PostgreSQL example (production):
#   postgresql+asyncpg://user:password@localhost:5432/nexus_db
#   postgresql+asyncpg://user:password@prod-db.example.com:5432/nexus_db
DATABASE_URL=sqlite+aiosqlite:///nexus.db

# ============================================================================
# Data Source Configuration (REQUIRED)
# ============================================================================
# USE_MOCK_DATA: Toggle between mock and real data
#   true  = Use mock data from mock_data.py (development/demo)
#   false = Use real data from database and services (production)
USE_MOCK_DATA=true

# ============================================================================
# Database Seed Configuration (REQUIRED)
# ============================================================================
# AUTO_SEED: Automatically populate database on startup if empty
#   true  = Auto-seed when database is empty (development)
#   false = Keep database empty, populate manually (production)
# Note: Only takes effect when USE_MOCK_DATA=true and database is empty
AUTO_SEED=true

# ============================================================================
# Calculation Configuration (REQUIRED)
# ============================================================================
# WINDOW_SIZE: Number of most recent commits to consider in calculations
# Typical values: 100, 200, 300, 500
WINDOW_SIZE=300

# ============================================================================
# Activity Thresholds (REQUIRED) - Commits in last 30 days
# ============================================================================
# Used to classify repositories as HIGH, MEDIUM, LOW activity levels
# Typical progression: LOW_THRESHOLD < MEDIUM_THRESHOLD < HIGH_THRESHOLD
ACTIVITY_HIGH_THRESHOLD=30
ACTIVITY_MEDIUM_THRESHOLD=10
ACTIVITY_LOW_THRESHOLD=1

# ============================================================================
# Knowledge Concentration Thresholds (REQUIRED) - Percentage values
# ============================================================================
# Used to identify risk levels based on contributor concentration
# Example: If top contributor has 60% of commits and WARNING_THRESHOLD=50
#   -> WARNING level alert (60% >= 50%)
CONCENTRATION_WARNING_THRESHOLD=50
CONCENTRATION_CRITICAL_THRESHOLD=70

# ============================================================================
# Display Limits (REQUIRED)
# ============================================================================
# TOP_CONTRIBUTORS_LIMIT: Maximum number of top contributors to show per repo
# TOP_HOTSPOTS_LIMIT: Maximum number of code hotspots to show per repo
# Typical values: 3-5 for contributors, 5-10 for hotspots
TOP_CONTRIBUTORS_LIMIT=3
TOP_HOTSPOTS_LIMIT=5

# ============================================================================
# Example Configurations
# ============================================================================
#
# DEVELOPMENT (.env):
#   HOST=0.0.0.0
#   PORT=8000
#   DEBUG=true
#   CORS_ORIGINS=http://localhost:8080,http://localhost:3000
#   USE_MOCK_DATA=true
#   AUTO_SEED=true
#   DATABASE_URL=sqlite+aiosqlite:///nexus.db
#   (all other variables with development values)
#
# PRODUCTION (.env):
#   HOST=0.0.0.0
#   PORT=8000
#   DEBUG=false
#   CORS_ORIGINS=https://yourdomain.com
#   USE_MOCK_DATA=false
#   AUTO_SEED=false
#   DATABASE_URL=postgresql+asyncpg://user:pass@prod-db:5432/nexus_db
#   (all other variables with production values)
