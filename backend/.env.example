# ============================================================================
# Nexus API Configuration Example
# ============================================================================
# Copy this file to .env and adjust values for your environment
# All variables below are REQUIRED unless marked as [optional]

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:8080

# API Configuration
API_V1_PREFIX=/api/v1

# Database Configuration
# SQLite example: sqlite+aiosqlite:///nexus.db
# PostgreSQL example: postgresql+asyncpg://user:password@localhost:5432/nexus_db
DATABASE_URL=sqlite+aiosqlite:///nexus.db

# Database Seed Configuration (REQUIRED)
# true  -> Auto-seed database on startup if empty (development/demo)
# false -> Don't seed automatically, keep database empty until populated (production)
AUTO_SEED=true

# ============================================================================
# Development vs Production examples:
# ============================================================================
#
# DEVELOPMENT (.env):
#   DEBUG=true
#   AUTO_SEED=true
#   CORS_ORIGINS=http://localhost:8080,http://localhost:3000
#
# PRODUCTION (.env):
#   DEBUG=false
#   AUTO_SEED=false
#   CORS_ORIGINS=https://yourdomain.com
#   DATABASE_URL=postgresql+asyncpg://user:pass@prod-db:5432/nexus_db
